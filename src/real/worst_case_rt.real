-------------------

theorem iteration1

foreach e in local_set do
var cet := Last (Property (e, "compute_execution_time"));
var per := Property (e, "period");

var quot := (cet_global/per) + 0.4999;
var entier := integer (quot);
var tmp := entier*cet;

return (MSum(tmp));

end iteration1;

